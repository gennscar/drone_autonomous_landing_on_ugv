from launch import LaunchDescription
from launch_ros.actions import Node

import testing
import control


def generate_launch_description():
    return LaunchDescription([
        Node(
            package='control',
            executable='hand_of_god_nav',
            name='hand_of_god',
            parameters=[
                {"frame_id": "uwb_sensor_head"},
                {"target_position": [25.0, 25.0, 25.0]}
            ]
        ),
        Node(
            package='estimation',
            executable='trilateration',
            name='LS_uwb_estimator',
            parameters=[
                {"sensor_id": "0"},
                {"method": "LS"}
            ]
        ),
        Node(
            package='estimation',
            executable='trilateration',
            name='GN_uwb_estimator',
            parameters=[
                {"sensor_id": "0"},
                {"method": "GN"}
            ]
        )
    ])
